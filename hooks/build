#!/bin/bash

docker build \
    -t $IMAGE_NAME \
    --build-arg APP_DEBUG="$APP_DEBUG" \
    --build-arg APP_ENV="$APP_ENV" \
    --build-arg APP_NAME="$APP_NAME" \
    --build-arg APP_URL="$APP_URL" \
    --build-arg AWS_BUCKET="$AWS_BUCKET" \
    --build-arg AWS_DEFAULT_REGION="$AWS_DEFAULT_REGION" \
    --build-arg AWS_ENDPOINT="$AWS_ENDPOINT" \
    --build-arg AWS_PATH_STYLE_ENDPOINT="$AWS_PATH_STYLE_ENDPOINT" \
    --build-arg BROADCAST_DRIVER="$BROADCAST_DRIVER" \
    --build-arg CACHE_DRIVER="$CACHE_DRIVER" \
    --build-arg LOG_CHANNEL="$LOG_CHANNEL" \
    --build-arg LOG_CHANNELS_1="$LOG_CHANNELS_1" \
    --build-arg LOG_CHANNELS_2="$LOG_CHANNELS_2" \
    --build-arg LOG_CHANNELS_3="$LOG_CHANNELS_3" \
    --build-arg LOG_LEVEL="$LOG_LEVEL" \
    --build-arg QUEUE_CONNECTION="$QUEUE_CONNECTION" \
    --build-arg QUEUE_FAILED_DRIVER="$QUEUE_FAILED_DRIVER" \
    --build-arg REDIS_HOST="$REDIS_HOST" \
    --build-arg REDIS_PORT="$REDIS_PORT" \
    --build-arg RODA_ACCEPT_FILES="$RODA_ACCEPT_FILES" \
    --build-arg RODA_DESCRIPTION="$RODA_DESCRIPTION" \
    --build-arg RODA_GOOGLE_RECAPTCHA_CACHE="$RODA_GOOGLE_RECAPTCHA_CACHE" \
    --build-arg RODA_GOOGLE_RECAPTCHA_SCORE="$RODA_GOOGLE_RECAPTCHA_SCORE" \
    --build-arg RODA_IMAGE_STORAGE="$RODA_IMAGE_STORAGE" \
    --build-arg RODA_IMG_DESCRIPTION="$RODA_IMG_DESCRIPTION" \
    --build-arg RODA_LATITUDE="$RODA_LATITUDE" \
    --build-arg RODA_LONGITUDE="$RODA_LONGITUDE" \
    --build-arg RODA_NAME="$RODA_NAME" \
    --build-arg RODA_PAGINATION_PERPAGE="$RODA_PAGINATION_PERPAGE" \
    --build-arg RODA_RENRAKU_NAME="$RODA_RENRAKU_NAME" \
    --build-arg RODA_RENRAKU_TWITTER="$RODA_RENRAKU_TWITTER" \
    --build-arg RODA_SERVICE_CASHE="$RODA_SERVICE_CASHE" \
    --build-arg RODA_SUBTITLE="$RODA_SUBTITLE" \
    --build-arg RODA_THUMBNAIL_HEIGHT="$RODA_THUMBNAIL_HEIGHT" \
    --build-arg RODA_THUMBNAIL_WIDTH="$RODA_THUMBNAIL_WIDTH" \
    --build-arg RODA_TOR_URL="$RODA_TOR_URL" \
    --build-arg RODA_TWITTER_ACCOUNT="$RODA_TWITTER_ACCOUNT" \
    --build-arg RODA_UPLOAD_CHUNK="$RODA_UPLOAD_CHUNK" \
    --build-arg RODA_UPLOAD_MAXSIZE="$RODA_UPLOAD_MAXSIZE" \
    --build-arg RODA_URL_IMAGE_BASE="$RODA_URL_IMAGE_BASE" \
    --build-arg RODA_WAIT_TIME="$RODA_WAIT_TIME" \
    --build-arg RODA_404_IMG_DESCRIPTION="$RODA_404_IMG_DESCRIPTION" \
    --build-arg SESSION_DRIVER="$SESSION_DRIVER" \
    --build-arg SESSION_LIFETIMEA="$SESSION_LIFETIME" .
